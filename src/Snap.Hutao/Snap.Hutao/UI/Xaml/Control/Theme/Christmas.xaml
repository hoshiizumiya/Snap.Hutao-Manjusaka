<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  Christmas primary colors  -->
    <Color x:Key="ChristmasRedColor">#FFE53935</Color>
    <Color x:Key="ChristmasGreenColor">#FF2E7D32</Color>
    <Color x:Key="ChristmasGoldColor">#FFFFD54F</Color>

    <SolidColorBrush x:Key="ChristmasPrimaryBrush" Color="#FFE53935"/>
    <SolidColorBrush x:Key="ChristmasSecondaryBrush" Color="#FF2E7D32"/>
    <SolidColorBrush x:Key="ChristmasAccentBrush" Color="#FFFFD54F"/>

    <!--  Override app theme resources with Christmas colors  -->
    <SolidColorBrush x:Key="AccentFillColorDefaultBrush" Color="#FFE53935"/>
    <SolidColorBrush x:Key="AccentFillColorSecondaryBrush" Color="#FFE53935"/>
    <SolidColorBrush x:Key="AccentFillColorTertiaryBrush" Color="#FF2E7D32"/>

    <!--  Decorations  -->
    <BitmapImage x:Key="ChristmasSnowImage" UriSource="Assets/Christmas/snow.png"/>
</ResourceDictionary>